{
  "extends": "../tsconfig.json",
  "buildOptions": {
    "incremental": true
  },
  "compilerOptions": {
    "outDir": "./dist",
    "paths": {
      "~/*": ["./src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ] /* Specify multiple folders that act like `./node_modules/@types`. */,
  },
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"],
    "experimentalResolverFeatures": true
  }
}
